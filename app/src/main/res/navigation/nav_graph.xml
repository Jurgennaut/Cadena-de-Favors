<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.cadenadefavors.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_addOfferFragment"
            app:destination="@id/addOfferFragment" />
        <action
            android:id="@+id/action_profileFragment_to_resultsFragment"
            app:destination="@id/resultsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_offerFragment"
            app:destination="@id/offerFragment" />
    </fragment>
    <fragment
        android:id="@+id/addOfferFragment"
        android:name="com.example.cadenadefavors.AddOfferFragment"
        android:label="fragment_addoffer"
        tools:layout="@layout/fragment_addoffer" />
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.cadenadefavors.ResultsFragment"
        android:label="fragment_results"
        tools:layout="@layout/fragment_results" />
    <fragment
        android:id="@+id/transferFragment"
        android:name="com.example.cadenadefavors.TransferFragment"
        android:label="fragment_transfer"
        tools:layout="@layout/fragment_transfer" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.cadenadefavors.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_offerFragment"
            app:destination="@id/offerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_transferFragment"
            app:destination="@id/transferFragment" />
    </fragment>
    <fragment
        android:id="@+id/offerFragment"
        android:name="com.example.cadenadefavors.OfferFragment"
        android:label="fragment_offer"
        tools:layout="@layout/fragment_offer" >
        <argument
            android:name="pOffer"
            app:argType="com.example.cadenadefavors.models.Offer" />
        <action
            android:id="@+id/action_offerFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>